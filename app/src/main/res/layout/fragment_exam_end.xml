<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.tickets.TicketEndFragment">


    <ImageView
        android:id="@+id/imageresultsexam"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="50dp" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/resulttxt"
        android:layout_below="@+id/imageresultsexam"
        android:gravity="center"
        android:layout_marginTop="15dp"
        android:textSize="24sp"/>

    <TextView
        android:id="@+id/results"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/resulttxt"
        android:layout_marginTop="100dp"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="30sp" />

    <Button
        android:id="@+id/backbuttonexam"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/results"
        android:layout_margin="30dp"
        android:textColor="@color/white"
        android:text="Вернутьcя назад"
        android:background="@drawable/btn_exam"/>
</RelativeLayout>